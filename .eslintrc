{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["airbnb"],
  "plugins": ["import"],
  "rules": {
    // fixation
    "no-undef": "off",
    "max-len": "off",
    "linebreak-style": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "no-nested-ternary": "off",
    "operator-linebreak": "off"
  }
}
